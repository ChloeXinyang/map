{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": {
    "text": "Australia's National Heritage Sites",
    "anchor": "start",
    "fontSize": 24,
    "font": "Arial",
    "color": "#333",
    "subtitle": "Exploring the locations of culturally and naturally significant sites",
    "subtitleFontSize": 14,
    "subtitleColor": "#666",
    "subtitleFont": "Arial"
  },
  "layer": [
    {
      "data": {
        "graticule": true
      },
      "projection": {
        "type": "mercator",
        "scale": 400
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "./australian-states.json",
        "format": {
          "type": "json",
          "property": "features"
        }
      },
      "projection": {
        "type": "mercator",
        "center": [135, -30],
        "scale": 400
      },
      "mark": {
        "type": "geoshape",
        "fill": {
          "condition": {
            "selection": "highlight",
            "value": "#f03b20"
          },
          "value": "#fee8c8"
        },
        "stroke": "black"
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
          {"field": "properties.STATE_CODE", "type": "nominal", "title": "State Code"}
        ]
      }
    },
    {
      "data": {
        "url": "./National_Heritage_List_Spatial_Database_(NHL)_-_public.json",
        "format": {
          "type": "topojson",
          "feature": "National_Heritage_List_Spatial_Database_(NHL)_-_public"
        }
      },
      "projection": {
        "type": "mercator",
        "center": [135, -30],
        "scale": 400
      },
      "mark": {
        "type": "circle",
        "color": "#e34a33",
        "size": {"field": "properties.number_of_sites", "type": "quantitative"},
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Heritage Site"},
          {"field": "properties.number_of_sites", "type": "quantitative", "title": "Number of Sites"}
        ]
      }
    }
  ],
  "selection": {
    "highlight": {
      "type": "single",
      "on": "click",
      "encodings": ["color"],
      "empty": "none"
    },
    "grid": {
      "type": "interval",
      "bind": "scales"
    }
  },
  "config": {
    "background": "#f9f9f9",
    "legend": {
      "title": "National Heritage Sites",
      "orient": "top-right",
      "labelFontSize": 12,
      "symbolSize": 100,
      "symbolType": "circle"
    },
    "axis": {
      "labelFontSize": 10,
      "titleFontSize": 12,
      "titleFont": "Arial",
      "labelFont": "Arial"
    }
  }
}
